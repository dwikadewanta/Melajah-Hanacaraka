<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GantiUsernameFragment">

    <data>
        <variable
            name="gantiUsernameFragment"
            type="com.example.capstoneproject.fragment.GantiUsernameFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/background1">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoslab_extrabold"
            android:text="@string/tv_title_ganti_username"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tvDeskripsi"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_deskripsi_ganti_username"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintBottom_toTopOf="@+id/etUsernamebaru"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/etUsernamebaru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/et_username"
            android:background="@drawable/edittext_background"
            android:elevation="10dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnGanti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_ganti"
            android:background="@drawable/btn_round"
            android:backgroundTint="@color/blue_eight"
            android:textColor="@color/white"
            android:onClick="@{ () -> gantiUsernameFragment.gantiUsername()}"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etUsernamebaru" />

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/progressBar"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            android:indeterminateTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etUsernamebaru" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivBack"
            android:src="@drawable/ic_back"
            android:onClick="@{() -> gantiUsernameFragment.toMenu()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>