<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MenuFragment">

    <data>

        <variable
            name="menuFragment"
            type="com.example.capstoneproject.fragment.MenuFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/pattaya_regular"
                android:text="@string/tv_title_menu1"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/pattaya_regular"
                android:text="@string/tv_title_menu2"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/btnKamus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle1" />

            <Button
                android:id="@+id/btnStatistik"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_menu_round"
                android:drawableEnd="@drawable/ic_statistik"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="clip_horizontal"
                android:onClick="@{() -> menuFragment.toStatistik()}"
                android:padding="10dp"
                android:text="@string/btn_statistik"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/viewAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKuis" />

            <Button
                android:id="@+id/btnKuis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_menu_round"
                android:drawableEnd="@drawable/ic_kuis"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="clip_horizontal"
                android:onClick="@{() -> menuFragment.toKuis()}"
                android:padding="10dp"
                android:text="@string/btn_kuis"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/btnStatistik"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnMenulis" />

            <Button
                android:id="@+id/btnMenulis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_menu_round"
                android:drawableEnd="@drawable/ic_menulis"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="clip_horizontal"
                android:onClick="@{() -> menuFragment.toMenulis()}"
                android:padding="10dp"
                android:text="@string/btn_menulis"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/btnKuis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKamus" />

            <Button
                android:id="@+id/btnKamus"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/btn_menu_round"
                android:drawableEnd="@drawable/ic_kamus"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="clip_horizontal"
                android:onClick="@{() -> menuFragment.toKamus()}"
                android:padding="10dp"
                android:text="@string/btn_kamus"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/btnMenulis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

            <View
                android:id="@+id/viewAdd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStatistik" />

            <androidx.drawerlayout.widget.DrawerLayout
                android:id="@+id/drawer_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.navigation.NavigationView
                    android:id="@+id/navView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    app:headerLayout="@layout/menu_header"
                    app:menu="@menu/menu" />

            </androidx.drawerlayout.widget.DrawerLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>