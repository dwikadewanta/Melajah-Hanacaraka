<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_graph"
    app:startDestination="@id/signupFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.capstoneproject.fragment.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_lupaPasswordFragment"
            app:destination="@id/lupaPasswordFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/enter_from_left"/>
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.capstoneproject.fragment.SignupFragment"
        android:label="SignupFragment" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/enter_from_left"/>

    </fragment>
    <fragment
        android:id="@+id/lupaPasswordFragment"
        android:name="com.example.capstoneproject.fragment.LupaPasswordFragment"
        android:label="LupaPasswordFragment" />
</navigation>